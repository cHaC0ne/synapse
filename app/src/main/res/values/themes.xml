    <style name="EditText.Fernando" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/purple_500</item>
        <item name="colorControlActivated">#FDD835</item>
        <item name="colorControlHighlight">@color/secondaryLightColor</item>
    </style>
</resources>